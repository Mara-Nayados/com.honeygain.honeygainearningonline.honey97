<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/honeygaincase97_splash1"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/crd"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"

            app:cardCornerRadius="30dp"
            app:strokeColor="#797979"
            app:strokeWidth="3dp">

            <ImageView
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:src="@drawable/honeygaincase97_logo">

            </ImageView>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>


    <ProgressBar
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_alignParentBottom="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/honeygaincase97_progess_gradient_splash"
        android:progress="100"
        android:progressDrawable="@drawable/honeygaincase97_progess_gradient_splash" />


</LinearLayout>